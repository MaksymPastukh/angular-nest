{
  // ========================================
  // ОСНОВНЫЕ НАСТРОЙКИ ФОРМАТИРОВАНИЯ
  // ========================================

  // Использовать точку с запятой в конце выражений
  // Для backend (NestJS) используем стандарт с точкой с запятой
  // Пример: const x = 5;
  "semi": true,

  // Использовать одинарные кавычки вместо двойных
  // Пример: const str = 'hello' (вместо "hello")
  "singleQuote": true,

  // Максимальная длина строки кода
  // Prettier будет переносить код, если строка превышает это значение
  "printWidth": 100,

  // Размер отступа (количество пробелов)
  "tabWidth": 2,

  // Использовать пробелы вместо табуляции
  "useTabs": false,

  // Добавлять запятую везде где возможно (ES2017+)
  // all: добавляет trailing comma везде, включая параметры функций
  // es5: добавляет только в объектах и массивах
  // none: не добавлять trailing comma
  // Для NestJS используем 'all' для лучших git diff
  "trailingComma": "all",

  // Всегда добавлять скобки вокруг единственного аргумента стрелочных функций
  // always: (x) => x
  // avoid: x => x
  "arrowParens": "always",

  // Тип переноса строки
  // auto: использовать системный по умолчанию (рекомендуется для кросс-платформенной разработки)
  // lf: Line Feed (используется в Linux/Mac)
  // crlf: Carriage Return + Line Feed (используется в Windows)
  "endOfLine": "auto",

  // Добавлять пробелы внутри фигурных скобок объектов
  // true: { foo: bar }
  // false: {foo: bar}
  "bracketSpacing": true,

  // Стратегия переноса для Markdown (для README.md)
  // preserve: сохранять как в оригинале
  // always: всегда переносить текст, превышающий printWidth
  // never: не переносить
  "proseWrap": "preserve",

  // Добавлять кавычки вокруг ключей объектов при необходимости
  // as-needed: только когда необходимо
  // consistent: если хотя бы один ключ требует кавычки, добавить везде
  // preserve: сохранять как в оригинале
  "quoteProps": "as-needed",

  // Не требовать @format pragma для форматирования файлов
  "requirePragma": false,

  // Не добавлять автоматически @format pragma
  "insertPragma": false,

  // ========================================
  // СПЕЦИФИЧНЫЕ НАСТРОЙКИ ДЛЯ ТИПОВ ФАЙЛОВ
  // ========================================
  "overrides": [
    {
      // Настройки для JSON файлов
      "files": "*.json",
      "options": {
        // JSON требует двойные кавычки по спецификации
        "singleQuote": false,
        // Размер отступа для JSON
        "tabWidth": 2,
        // Trailing comma не поддерживается в JSON
        "trailingComma": "none"
      }
    },
    {
      // Настройки для Markdown файлов (README, документация)
      "files": "*.md",
      "options": {
        // Не обрезать строки в Markdown (для читаемости исходников)
        "proseWrap": "preserve",
        // Увеличить максимальную длину строки
        "printWidth": 120
      }
    },
    {
      // Настройки для YAML файлов (docker-compose.yml, .yml конфиги)
      "files": ["*.yml", "*.yaml"],
      "options": {
        // YAML чувствителен к отступам
        "tabWidth": 2,
        // Использовать одинарные кавычки
        "singleQuote": true
      }
    }
  ]
}
